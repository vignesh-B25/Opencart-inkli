{% if faqs %}
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th width="1" class="text-center">
                        <input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" />
                    </th>
                    <th>{{ column_question }}</th>
                    <th>{{ column_sort_order }}</th>
                    <th>{{ column_status }}</th>
                    <th>{{ column_action }}</th>
                </tr>
            </thead>
            <tbody>
                {% for faq in faqs %}
                <tr>
                    <td class="text-center">
                        <input type="checkbox" name="selected[]" value="{{ faq.faq_id }}" />
                    </td>
                    <td>{{ faq.question }}</td>
                    <td>{{ faq.sort_order }}</td>
                    <td>{{ faq.status ? 'Enabled' : 'Disabled' }}</td>
                    <td class="text-end">
                        <a href="{{ edit ~ '&faq_id=' ~ faq.faq_id ~ '&user_token=' ~ user_token }}" class="btn btn-primary">
                            <i class="fa fa-pencil"></i> {{ button_edit }}
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <p class="text-center">{{ text_no_results }}</p>
{% endif %}
